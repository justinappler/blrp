extends layout

block content
  div
    h2 blurps
    table(class="table table-condensed")
      thead
        th from
        th message
        th actions
      for blurp in blurps
        tr
          td= blurp.creator.name
          td= blurp.text
          td
            a(href="#") Blurp
  hr
  div(class='row-fluid marketing')
      div(class='span6')
        if (blurpSubscribe)
          h2 Subscribed to #{blurpSubscribe}
        include includes/blurpRequest.jade
      div(class='span6')
        h4 friends
        ul
          for friend in user.friends
            li
              p= friend.name
          else
            li
              p you should be nicer to people
      div(class='span6')
        h4 blurp requests
        ul
          for req in blurpReqs
            li
              p
                |[
                a(href='/blurpRequest/delete/' + req._id)  x
                |  ]
                | To: #{req.targetUser.name}, Message: #{req.text}
          else
            li
              p no existing blurp requests
